---
    to: "<%=authEnabled ? `${appName}/www/ui/forgotPassword.js` : null%>"
---
import { button, div, form, h1, h2, input, p } from '/lib/fnelements.mjs'
import { sendForgotPassword } from '../fun/auth.js'
import notify from '../part/notify.js'
import { fnstate } from '/lib/fntags.mjs'
import { fnlink } from '/lib/fnroute.mjs'


export default () => {
    const formValid = fnstate( false )

    const emailInput = input( {
                                  id: 'email',
                                  type: 'email',
                                  placeholder: 'Email',
                                  oninput: () =>
                                      formValid( emailInput.checkValidity() )
                              } )

    const emailSent = () => div(
        h1( 'Password Reset Email Sent' ),
        p( { style: 'font-size:20px;' }, 'To: ', emailInput.value ),
        p( 'Check your email for a link to reset your password.' ),
        p(fnlink({to: '/login'}, 'Login'))
    )

    const resetForm = form(
        {
            style: {
                display: 'flex',
                'justify-content': 'center',
                'flex-direction': 'column'
            },
            onsubmit: e => {
                e.preventDefault()
                sendForgotPassword( emailInput.value )
                    .then( () => {
                        resetForm.replaceWith( emailSent() )
                    } )
                    .catch( e => {
                        console.error( e )
                        notify( 'Reset Email Send Failed.' )
                    } )
            }
        },
        h2( 'Request Password Reset' ),
        p( 'Enter your email to request a password reset' ),
        emailInput,
        formValid.bindAs(
            button(
                {
                    style:{padding: 0},
                    id: 'login-button',
                    type: 'submit',
                    disabled: !formValid()
                },
                'Reset Password'
            ),
            ( resetButton ) => resetButton.disabled = !formValid()
        )
    )
    return resetForm
}

---
to: "<%=authEnabled ? `${appName}/www/api/auth/resetPassword.rt.js` : null%>"
---
const { secureRandom, hashPassword } = require( '../../../lib/apiAuth.js' )
const { getUserAuth, patchUserAuth } = require( '../../../lib/userdb.js' )
const meetsRequirements = password => password
    && password.length > 8
    && password.match( '[0-9]' )
    && password.toLowerCase().match( '[a-z]' )

module.exports = {
    POST: async( { body: { username, resetId, password } } ) => {
        let userAuth = await getUserAuth(username)
        if(userAuth.resetId !== resetId) {
            throw {
                status: 404,
                message: 'Reset not found'
            }
        }

        if( new Date().getTime() > userAuth.resetAt.getTime() + 15 * 60 * 1000 ) {
            throw {
                status: 400,
                message: 'Reset Link is Expired.'
            }
        }
        if( !meetsRequirements( password ) ) {
            throw {
                status: 400,
                message: 'Password must be at least 8 characters and have a letter and a number.'
            }
        }

        let salt
        if( !userAuth.salt ) {
            salt = secureRandom()
            await patchUserAuth({id: userAuth.id, salt })
        } else {
            salt = userAuth.salt
        }

        await patchUserAuth(
            {
                id: userAuth.id,
                resetId: null,
                resetAt: null,
                lockedAt: null,
                failedLogins: 0,
                passwordHash: hashPassword( password, salt )
            }
        )
    }
}
